{
  "name": "vambe",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint -- --max-warnings 0",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:generate": "cd packages/database && npx drizzle-kit generate && cd ../..",
    "db:migrate": "cd packages/database && npx drizzle-kit push && cd ../.."
  },
  "dependencies": {
    "@manypkg/cli": "^0.21.4",
    "@turbo/gen": "^1.13.4",
    "eslint": "8.57.0",
    "eslint-config-custom": "1.0.0",
    "turbo": "^2.0.6",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5"
  }
}
